<div class="wrapper">
  <div class="header" style="margin-top:15px;"><span>實作 <%= @code.q %></span></div>
  <div id="question"><%= @code.description %></div>
  <div class="header mode"><span>寫作模式</span></div>
  <div id="editor"><%= @code.content %></div>
  <div id="result">
    <div id="body"></div>
  </div>
  <button class="send btn btn-primary pull-right" id="send">送出</button>
  <% if current_user.admin? %>
    <button class="btn btn-success pull-right" id="observer" style="">切換模式</button>
    <%= link_to '下一題', practices_path(q: @q + 1), class: 'btn btn-default pull-right', id: 'next' %>
    <%= link_to('上一題', practices_path(q: @q - 1), class: 'btn btn-default pull-right', id: 'previous') unless @q == 0 %>
  <% end %>
</div>
